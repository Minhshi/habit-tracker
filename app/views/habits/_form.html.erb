<%= simple_form_for(@habit) do |h| %>
<div class="form-group">
  <%= h.label :title %>
  <%= h.text_field :title, class: "form-controll" %>
</div>
<div class="form-group">
  <%= h.label :details %>
  <%= h.text_field :details, class: "form-controll" %>
</div>
<div class="form-group">
  <%= h.input :category, :collection => ["personal", "work", "health"] %>
</div>
<%= h.submit class: "btn btn-success" %>
<% end %>
